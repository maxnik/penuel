<%= form_tag sessions_path, class: 'login form-horizontal' do |f| %>
  <h1 class="col-sm-6 col-sm-offset-3"><%= t('.heading') %></h1>
  
  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-3 text-danger">
      <%= flash[:alert] %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-3">
    <%= text_field_tag :email, params[:email], class: 'form-control', 
        placeholder: "#{t('email', locale: :ru)} / #{t('email', locale: :en)}" %>
    </div>
  </div>

  <div class="form-group">
    <div  class="col-sm-6 col-sm-offset-3">
    <%= password_field_tag :password, params[:password], class: 'form-control', 
        placeholder: "#{t('password', locale: :ru)} / #{t('password', locale: :en)}" %>
      </div>
  </div>

  <div class="checkbox col-sm-6 col-sm-offset-3">
    <label>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        <%= t('remember_me', locale: :ru) %> / <%= t('remember_me', locale: :en) %>
    </label>
  </div>

  <div class="form-group">
    <div  class="col-sm-6 col-sm-offset-3">
    <%= button_tag t('.heading'), class: 'btn btn-primary'  %> 
  </div>
  </div>
<% end %>