<h1><%= t('.heading') %></h1>

<%= link_to t('.new'), new_user_path, class: 'btn btn-primary' %>

<table class="users table table-striped">
  <thead>
    <th class="col-sm-5"></th>
    <th class="col-sm-4"><%= t('welcome.index.teams') %></th>
    <th class="col-sm-3"></th>
  </thead>
<% @users.each do |user| %>
  <tr id="<%= dom_id(user) %>">
    <td class="role-name">
      <%= link_to localized_name(user), user_path(user) %>
      <%= role_for(user) %>
    </td>
    <td>
      <%= team_list_for(user) %>
    </td>
    <td>
      <%= link_to t('edit'), edit_user_path(user), class: 'btn btn-info btn-sm' %>
      <%= link_to t('delete'), user_path(user), remote: true, method: 'delete',
                    class: 'btn btn-danger btn-sm', 
                    data: { confirm: t('confirm') } %>
    </td>
  </tr>
<% end %>
</table>